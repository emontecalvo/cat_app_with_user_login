<!-- creating a session -->

<form action="<%= session_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="user_name">User Name</label>
  <input
    type="text"
    name="user[user_name]"
    id="user_name"
    value="username">

    <label for="password">Password</label>
    <input
      type="text"
      name="user[password]"
      id="password"
      value="password">

  <input type="submit" value="Login">
</form>
